{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "vend-os",
  "version": "0.1.0",
  "identifier": "com.vend-os.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [{ "title": "vend-os", "width": 800, "height": 600 }],
    "security": { "csp": null }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "libs/macos/libCr_Core.dylib",
      "libs/macos/libmonitor_protocol.dylib",
      "libs/macos/libmonitor_protocol_pf.dylib",

      "libs/windows/x64/Cr_Core.dll",
      "libs/windows/x64/monitor_protocol.dll",
      "libs/windows/x64/monitor_protocol_pf.dll",

      "libs/linux/x86_64/libCr_Core.so",
      "libs/linux/x86_64/libmonitor_protocol.so",
      "libs/linux/x86_64/libmonitor_protocol_pf.so",
      "libs/linux/aarch64/libCr_Core.so",
      "libs/linux/aarch64/libmonitor_protocol.so",
      "libs/linux/aarch64/libmonitor_protocol_pf.so",
      "libs/linux/armv7/libCr_Core.so",
      "libs/linux/armv7/libmonitor_protocol.so",
      "libs/linux/armv7/libmonitor_protocol_pf.so"
    ]

  }
}
